@model IList<TesteNET.Application.ViewModel.UserAuthorizationViewModel>
<h2>Users</h2>
<h3>Users authorizations</h3>
<div class="row">
    <div class="col-lg-12 cell-align-left">
        <div class="col-lg-8 cell-align-left noPaddingLeft">
            <table class="table table-condensed table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="text-center">User</th>
                        <th scope="col" class="text-center">Is Administrator</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td class="text-center">@item.Identity</td>
                            <td class="text-center">
                                <div class="custom-control custom-checkbox">
                                    <input @(item.IsAdmin ? "checked" : "") onclick="ChangeIsAdmin('@item.IdUserAuthorization');" type="checkbox" class="custom-control-input" id="customCheck2">
                                    @*<input checked=@(!item.IsAdmin ? "" : "checked") type="checkbox" class="custom-control-input" id="customCheck2">*@
                                </div>
                                @*@item.IsAdmin*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">

    function ChangeIsAdmin(idUserAuthorization)
    {
        //alert(idUserAuthorization);

        $.ajax({
            url: '@Url.Action("ChangeIsAdmin", "UserAuthorization")',
            type: 'POST',
            data: { idUserAuthorization: idUserAuthorization },
            success: function (result) {
                if (result.success) {
                    alert("Authorization updated successfully.");
                    location.reload();
                }
                else {
                    alert("Error updating authorization.");
                }
            },
            error: function (xml, message, text) {
                alert("Error updating authorization.");
            }
        });
    }
</script>

